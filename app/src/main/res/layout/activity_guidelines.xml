<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GuidelinesActivity">


    <TextView
        android:id="@+id/guidelinesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam Guidelines"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/guidelinesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Please read the instructions carefully before starting the exam.\n\n2. No cheating allowed. Any form of cheating will result in disqualification.\n\n3. Make sure your internet connection is stable during the exam.\n\n4. If you need assistance, contact the exam proctor."
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinesTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
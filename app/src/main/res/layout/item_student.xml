<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- CardView for Student Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Student Name -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <!-- Course Name -->

            <TextView
                android:id="@+id/tvCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: Bachelor of Computer Science"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: Bachelor of Computer Science"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number: Bachelor of Computer Science"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthdate: Bachelor of Computer Science"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />


            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: Bachelor of Computer Science"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:id="@+id/btnConfirm"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"/>

            <!-- Score and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
